<script type="text/javascript">
    $(document).ready(function(){
        $("#twilio_in_news a").hover(function(e){
            var cls = $(this).attr("class");
            $(this).siblings("p").hide();
            $(this).siblings("p."+ cls + "_qu").show();
            if(cls == "talk1"){
                left = "108px";
            } else if (cls == "talk2"){
                left = "327px";
            } else if (cls == "talk3"){
                left = "516px";
            } else if (cls == "talk4"){
                left = "745px";
            }
            $("#quote_marker").animate({left: left});
        });
    });
</script>
	
