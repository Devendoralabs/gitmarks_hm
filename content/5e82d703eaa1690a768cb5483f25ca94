<script type="text/javascript" charset="utf-8">

function initPicks()
{
	
	$('#hero').find('li a').bind("click",function() {
		$('#hero img').dumbCrossFade('jump',this.name);
		$('#memo h4').dumbCrossFade('jump',this.name);
		$('#features ul').dumbCrossFade('jump',this.name);
		$('#dotcom').removeClass();
		$('#dotcom').addClass($(this).parent().attr('class'));
		$('#featured_site a').attr('href','http://'+this.rel).text(this.rel);
		return false;
	});
}

$(document).ready(function()
{
	initPicks();
	$('#hero img').dumbCrossFade({'slideType':'fade','showTime':'500000','transitionTime':'500'});
	$('#memo h4').dumbCrossFade({'slideType':'fade','showTime':'500000'});
	$('#features ul').dumbCrossFade({'slideType':'slidehorizontal','showTime':'500000','slideDirection':'forward'});
});

</script>


