<script type="text/javascript" charset="utf-8">
$(function() {
	if(!window.email_button_set) {
		$(".email_button").bind('click', function() {
			//console.log('clickevent!', $(this), $("#email_this.show").length);
			if($("#email_this.show").length > 0) {
				$("#email_this.show").fadeOut(350).removeClass('show');
			} else {
				$("#email_this").fadeIn(350).addClass("show");
				$("#xhrResponse").hide();
				$("#tellafriend_form").show();
			}
		});

		$("#tellafriend_form").submit(function() {
			// borrowed / adapted from from http://expressionengine.com/forums/viewthread/159233/
			var $responseDiv	= $('#xhrResponse'),
				$form			= $('#tellafriend_form'),
				str				= $form.serialize();
			$responseDiv.empty();
			$.ajax({
				  type:		"POST"
				, url:		"http://campusprogress.org//"
				, data:		str
				, success:	function(xhrResp) {
					$responseDiv.html(xhrResp);
					if($responseDiv.find('#blog ul').length == 0) {
						$form.hide();
						$responseDiv.html(
							"<div class='success'><h3>Your email message has been sent.</h3></div>"
						).show();
						$("#email_this").delay(1000).fadeOut(350).removeClass('show');
					} else {
						$responseDiv.html(
							"<div class='errors'><p><span>Sorry!</span> We can't proceed until these small problems are fixed:</p><ul>" +
							$responseDiv.find('#blog ul').html() +
							"</ul></div>"
						);
						$responseDiv.show();
						$form.show();
					}
				}
			});
		
			// stop the form completing
			return false;
		});

		window.email_button_set = true;
	}
});
</script>

			
							
					
													
