var sliders = {};
// alert('top');
 
$(document).ready(function(){
	$("#configurator2").height('auto');
	$("#configurator2").hide();
				
	Shadowbox.init();
	
	
	
	
	$('#solutions').removeClass('current');
	$('#aboutus').removeClass('current');
	$('#resources').removeClass('current');
	
	$('#resources').addClass('current');
	

	// browser specific handling
	if (jQuery.browser.msie) {
		if (parseInt(jQuery.browser.version) <= 6) {
			$(".leftbody").css({ backgroundImage: 'none'});
			$(".contentsbody").css({ backgroundImage: 'none'});
		}
		else {
		}
	}
	else {
	}
	
 	// $("subscribe-tool").click(function(){
 	//    		alert("Thanks for visiting!");
 	// });
	$("#subscribe-tool").click(function(){
		$("#configurator2").slideDown(1000);
		$('#subscribecol').animate({ backgroundColor: '#fff' },1000).animate({ backgroundColor: '#ff4' }).animate({ backgroundColor: '#fff' });
		return false;
	});
	$("#browse-tool").click(function(){
		$("#configurator2").slideDown(1000);
		$('#filtercol').animate({ backgroundColor: '#fff' },1000).animate({ backgroundColor: '#ff4' }).animate({ backgroundColor: '#fff' });
		return false;
	});
	$("#buttonCancel").click(function(){
		$("#configurator2").slideUp(1000);
		return false;
	});

	$(".year").hide();
	$("#yr2008link").click(function() {
		$("#yr2008").slideToggle(500);
		return false;
	});
	$("#yr2007link").click(function() {
		$("#yr2007").slideToggle(500);
		return false;
	});
	$("#yr2006link").click(function() {
		$("#yr2006").slideToggle(500);
		return false;
	});
	$("#yr2005link").click(function() {
		$("#yr2005").slideToggle(500);
		return false;
	});
	

});

	</script>
	

