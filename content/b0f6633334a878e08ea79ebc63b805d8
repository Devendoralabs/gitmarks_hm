<h4>
	<a id="c177-commentform-link" href="#">
		Add a comment
	</a>
</h4>





<script type="text/javascript" charset="utf-8">
	$('#c177-formwrapper').hide();
	$('#c177-newcomment').hide();
	$('#c177-commentform-link').click(function() {
		$('#c177-formwrapper').slideToggle(500);
		return false;
	});
	
	$('#c177-more-comments').hide();
	$('#c177-more-commentslink').click(function() {
		$('#c177-more-comments').slideToggle(500);
		return false;
	});
	
	
	function validate(formData, jqForm, options) { 
	    // formData is an array; here we use $.param to convert it to a string to display it 
	    // but the form plugin does this for you automatically when it submits the data 
	    // jqForm is a jQuery object encapsulating the form element.  To access the 
	    // DOM element for the form do this: 
	    // var formElement = jqForm[0]; 
		alert("RUNNING IN VALIDATE");
		name = formData[0].value;
		email = formData[1].value;
		email2 = formData[2].value;
		comment = formData[3].value;
		
		$('.comment-name-label').removeClass('comment-label-error');
		$('.comment-email2-label').removeClass('comment-label-error');
		$('.comment-comment-label').removeClass('comment-label-error');

		if (name.length > 0 && comment.length > 0 && email2.length > 0) {
			// get and increment the comment count
			var cstr = $('#c177').html();
			var comment_count = parseInt(cstr.split(' ')[0]);
			var num_comments = (comment_count+1) + ' comment';
			// pluralize the number of comments
			if (comment_count > 0) {
				num_comments = num_comments + 's';
			}
			// jqForm.clearForm();
			$('#c177-formwrapper').slideUp(1000).$('#c177').html(num_comments).animate({ backgroundColor: '#ff4' }).animate({ backgroundColor: '#fff' });

			// name = name + ' said:';
			comment = comment.replace(/\n/g,"<br/>");
			$('#c177-newcomment-name').html(name);
			$('#c177-newcomment-comment').html(comment);
			$('#c177-newcomment').slideDown(2000).animate({ backgroundColor: '#ff4' },2000).animate({ backgroundColor: '#fff' });
			return true;
		}
		else {
		    // here we could return false to prevent the form from being submitted; 
		    // returning anything other than false will allow the form submit to continue 
			if (name.length == 0) {
				$('.comment-name-label').addClass('comment-label-error');
			}
			if (email2.length == 0) {
				$('.comment-email2-label').addClass('comment-label-error');
			}
			if (comment.length == 0) {
				$('.comment-comment-label').addClass('comment-label-error');
				// $('#c177-form .comment-comment').css({ color: '#d00'});
			}
			return false;
		}
 	} 

	
	function easyvalidate(formData, jqForm, options) { 
		name = formData[0].value;
		email = formData[1].value;
		email2 = formData[2].value;
		comment = formData[3].value;
		
		$('.comment-name-label').removeClass('comment-label-error');
		$('.comment-email2-label').removeClass('comment-label-error');
		$('.comment-comment-label').removeClass('comment-label-error');
		
		if (name.length > 0 && comment.length > 0 && email2.length > 0) {
			// get and increment the comment count
			var cstr = $('#c177').html();
			var comment_count = parseInt(cstr.split(' ')[0]);
			var num_comments = (comment_count+1) + ' comment';
			// pluralize the number of comments
			if (comment_count > 0) {
				num_comments = num_comments + 's';
			}
			$('#c177-formwrapper').slideUp(600);
			$('#c177').animate({ backgroundColor: '#fff' }, 1000).html(num_comments).animate({ backgroundColor: '#ff4' }).animate({ backgroundColor: '#fff' });
		
			// name = name + ' said:';
			comment = comment.replace(/\n/g,"<br/>");
			$('#c177-newcomment-name').html(name);
			$('#c177-newcomment-comment').html(comment);
			$('#c177-newcomment').animate({ backgroundColor: '#fff' }, 2500).slideDown(1000).animate({ backgroundColor: '#ff4' },2000).animate({ backgroundColor: '#fff' });
		
			return false;
		}
		else {
		    // here we could return false to prevent the form from being submitted; 
		    // returning anything other than false will allow the form submit to continue 
			if (name.length == 0) {
				$('.comment-name-label').addClass('comment-label-error');
			}
			if (email2.length == 0) {
				$('.comment-email2-label').addClass('comment-label-error');
			}
			if (comment.length == 0) {
				$('.comment-comment-label').addClass('comment-label-error');
				// $('#c177-form .comment-comment').css({ color: '#d00'});
			}
			return false;
		}
	}
    $('#c177-form').ajaxForm( {
		beforeSubmit: easyvalidate,
		clearForm: false,
		type: 'POST',
		success: function() { 
			alert("Thank you for your comment!"); 
		} 
    }); 

	// attach handler to form's submit event 
	$('#c177-form').submit(function() { 
	    // submit the form 
	    $(this).ajaxSubmit(); 
	    // return false to prevent normal browser submit and page navigation 
	    return false; 
	});

	
	
