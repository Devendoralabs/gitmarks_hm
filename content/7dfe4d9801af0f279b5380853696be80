  function carouselFadeIn() {
    $('#carousel').animate({
      opacity: 1
    });
  }
  $('#carousel').jcarousel({
    scroll: 1,
    auto: 5,
    animation: "slow",
    wrap: "last",
    initCallback: function() {
      $('.jcarousel-next-horizontal,.jcarousel-prev-horizontal').css('opacity',.50);
    },
    itemFirstOutCallback: {
      onBeforeAnimation: carouselFadeOut,
      onAfterAnimation: carouselFadeIn
    }
  });        
