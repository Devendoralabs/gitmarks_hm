function triggerURL(url) {
	if (!InstallTrigger.updateEnabled()) {
		alert("You need to enable 'Allow web sites to install software'");
		return false;
	} else {
		var id = (new Date()).valueOf();
		InstallTrigger.startSoftwareUpdate(url + "?" + id);
		return false;
	}
}

</script>
