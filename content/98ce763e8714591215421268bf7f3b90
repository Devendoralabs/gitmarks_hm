      function initialize() {
        if (!_('ajax_inner'))
          new Ajax.Updater('ajax_outer', '/home/home_ajax', {asynchronous:true, evalScripts:true});

        new Protofade('slides', {duration: 1, delay: 10, pause: true, controls: true});
        var tt = new TwitterTicker();
      
        if (geofill)
          geofill.find({callback:function(o){
            if (o.country) MindMeister.utils.setCookie("user_country", o.country, 7);
            if (o.city) MindMeister.utils.setCookie("user_city", o.city, 7);
          }
          });
      
      }
      MindMeister.onload.add(initialize);
    </script>

    
