  var slider = {slides: [firstSlide,secondSlide,thirdSlide,fourthSlide,fifthSlide]};
  slider.image_height = 300;slider.side_image_width = 180;slider.middle_image_width = 534;slider.slide_count = 5;slider.current_slide_index	= 1;slider.fade_target;slider.fade_value;slider.fade_end_value;slider.fade_velocity;slider.table_position = slider.side_image_width - slider.middle_image_width*2;slider.table_position_end = 0;slider.acceleration = 0;slider.velocity = 0;
  slider.clampIndex = function(base_index){
  	if(base_index > (slider.slide_count - 1)){
  		return base_index - slider.slide_count;
  	}
  	if(base_index < 0){
  		return base_index + slider.slide_count;
  	}
  	return base_index;
  }
  slider.startScrollLeft = function(){
  	slider.hideOverlays(false,true);
  	slider.velocity = -20;
  	slider.table_position_end =  slider.side_image_width - slider.middle_image_width*3;
    setTimeout(slider.tick,20);   
  }
  slider.startScrollRight = function(){
  	slider.hideOverlays(true,false);
  	slider.velocity = 20;
  	slider.table_position_end = slider.side_image_width - slider.middle_image_width;
    setTimeout(slider.tick,20);   
  }
  slider.fadeOut = function(overlay_image){
  		slider.fade_value = 100;
  		slider.fade_target = overlay_image;
  		slider.fade_end_value = 0;
  		slider.fade_velocity = -7;
  		setTimeout(slider.fadeTick,20);   
  }
  slider.fadeIn = function(overlay_image){
  		slider.fade_value = 0;
  	  slider.fade_target = overlay_image;
  		slider.fade_end_value = 100;
  		slider.fade_velocity = 7;
  		setTimeout(slider.fadeTick,20);   
  }
  slider.setOpacity = function (element,value_0_to_100){
  	element.style.filter='alpha (opacity=' + (value_0_to_100/2) + ')';
  	element.style.opacity=(value_0_to_100/100);
  }
  slider.fadeTick = function (){
  	slider.fade_value = slider.fade_value + slider.fade_velocity;
  	if(slider.fade_velocity > 0 && slider.fade_value >= slider.fade_end_value){
  		slider.fade_value = slider.fade_end_value;
  		slider.setOpacity(slider.fade_target,slider.fade_value);
  		return;
  	}
  	if(slider.fade_velocity < 0 && slider.fade_value <= slider.fade_end_value){
  		slider.fade_value = slider.fade_end_value;
  		slider.setOpacity(slider.fade_target,slider.fade_value);
  		return;
  	}
  	slider.setOpacity(slider.fade_target,slider.fade_value);
    setTimeout(slider.fadeTick,20);   
  }
  slider.setText = function (index){
    var header = document.getElementById("SSTextHeader");  
    var body = document.getElementById("SSTextBody");  
    header.innerHTML = slider.slides[slider.clampIndex(index)].headline;
    body.innerHTML = slider.slides[slider.clampIndex(index)].subhead;
  }
  slider.hideOverlays = function (left,right){
  	if(left){
  	  	var left_overlay = document.getElementById("leftoverlay");  
  	  	left_overlay.style.display="none";
  	}
  	if(right){
  	  	var right_overlay = document.getElementById("rightoverlay");  
  		right_overlay.style.display="none";
  	}
  }
  slider.showOverlays = function (){
  	var left_overlay = document.getElementById("leftoverlay");  
  	var right_overlay = document.getElementById("rightoverlay");  
  	left_overlay.style.display="inline";
  	right_overlay.style.display="inline";
  }
  slider.populateImages = function (current_index){
  		var left_left_image = document.getElementById("leftleftimage");
  		var left_image = document.getElementById("leftimage");
  		var center_image = document.getElementById("centerimage");
  		var right_image = document.getElementById("rightimage");
  		var right_right_image = document.getElementById("rightrightimage");
      left_left_image.src = slider.slides[slider.clampIndex(current_index -2)].image;
      left_image.src = slider.slides[slider.clampIndex(current_index -1)].image;
      center_image.src = slider.slides[slider.clampIndex(current_index) ].image;
      right_image.src = slider.slides[slider.clampIndex(current_index + 1)].image;
      right_right_image.src = slider.slides[slider.clampIndex(current_index +2)].image;
  }
  slider.finishScroll = function (delta){
  	slider.current_slide_index = slider.clampIndex(slider.current_slide_index+delta);
  	slider.populateImages(slider.current_slide_index - 1);
  	slider.setTablePosition(slider.side_image_width-slider.middle_image_width*2);
    slider.setText(slider.current_slide_index -1);
    slider.showOverlays();
  }
  slider.setTablePosition = function (position){
  	var image_table =  document.getElementById("imagetable");
    slider.table_position = position;
    image_table.style.left = slider.table_position + "px";
  }
  slider.tick = function (){
  	if(slider.velocity < 0 && (slider.table_position+slider.velocity) < slider.table_position_end){
  	   slider.finishScroll(1);
  	   return;
  	} 
  	if(slider.velocity > 0 && (slider.table_position+slider.velocity) > slider.table_position_end){
  	   slider.finishScroll(-1);
  	   return;
  	} 
    slider.setTablePosition(slider.table_position + slider.velocity);
    setTimeout(slider.tick,20);   
  }
  slider.loadSlideshow = function (){
    var container_DIV = document.getElementById("showdiv");
    var HTML = '<div style="overflow: hidden; position: relative; width: 900px; height: 300px; white-space: nowrap;">' + 	
        '<div id="imagetable" >' +
        '<img id="leftleftimage"  src="' + slider.slides[3].image + '" />' + 
  	    '<img id="leftimage"  src="'+ slider.slides[4].image +'" />' + 
        '<img id="centerimage" src="'+ slider.slides[0].image  + '" />' + 
        '<img id="rightimage" src="' + slider.slides[1].image + '" />' + 
        '<img id="rightrightimage" src="'+ slider.slides[2].image +'" />' + 
  	    '<img id="leftoverlay" src="http://poptech.org/icons/home09/slide_show/gray_overlay.png" onclick="slider.startScrollRight()"' + 
  	    ' onmouseout="slider.fadeIn(this);" onmouseover="slider.fadeOut(this);" style="z-index: 2; position: absolute; top: 0px;' + 
  	    ' left: 534px; width: 534px; height: 300px; opacity: 1;" alt="overlay"/>' + 		    
  	    '<img alt="overlay" id="rightoverlay" src="http://poptech.org/icons/home09/slide_show/gray_overlay.png" onclick="slider.startScrollLeft()"' +
  	    ' onmouseout="slider.fadeIn(this);" onmouseover="slider.fadeOut(this);" style="z-index: 2; position: absolute; top: 0px; left: 1602px; ' +
  	    'width: 534px; height: 300px; opacity: 1;"/></div></div>';

    HTML += '<ul id="slideshow_ul" ><li id="SSTextHeader" class="SlideShowHeaderText"></li>';
    HTML += '<li id="SSTextBody" class="SlideShowSubheadText"></li></ul>';
  	HTML += '<img alt="whiteline" id="whiteline_left" src="/icons/home09/slide_show/white_line.png" />';
  	HTML += '<img alt="whiteline" id="whiteline_right" src="/icons/home09/slide_show/white_line.png" />';
  	HTML += '<img alt="arrow" id="leftarrow" src="/icons/home09/slide_show/circle_left.png" onclick="slider.startScrollRight()" />';
  	HTML += '<img alt="arrow" id="rightarrow" src="/icons/home09/slide_show/circle_right.png" onclick="slider.startScrollLeft()" />';
    container_DIV.innerHTML = HTML;    
    slider.setText(0);}();
    window.setInterval( "slider.startScrollLeft()",10000); 
