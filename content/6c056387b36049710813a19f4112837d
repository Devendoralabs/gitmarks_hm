		function e(id) {
    	return document.getElementById(id);
		}
		
		function due() {
			if(e("tradtranslated").innerHTML != "") {
				e("puntini").innerHTML = ".<font size=3 color=red><b>.</b></font>..";
					setTimeout("tre()",1000);
			}
		}
		
		function tre() {
			if(e("tradtranslated").innerHTML != "") {
				e("puntini").innerHTML = "..<font size=3 color=red><b>.</b></font>.";
				setTimeout("quattro()",1000);
			}
		}
		function quattro() {
			if(e("tradtranslated").innerHTML != "") {
				e("puntini").innerHTML = "...<font size=3 color=red><b>.</b></font>";
				setTimeout("BlinkyPoint()",1000);
			}
		}
		
		function BlinkyPoint() {
			if(e("tradtranslated").innerHTML != "") {
				e("puntini").innerHTML = "<font size=3 color=red><b>.</b></font>...";
				setTimeout("due()",1000);
			}
		}
	</script>		
