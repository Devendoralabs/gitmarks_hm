<script type="text/javascript">
//comment replies
$(document).ready(function(){
    $('a.replylink').click(function(e){
        e.preventDefault();
        src = $(this).attr('href').replace('#reply-', '');
        reply_user = $('#comment-user-'+src).text().replace(/^\s+|\s+$/g,"")
        $.get('/comments/raw/'+src+'/', function(data){
            reply = "[" + reply_user + " said](#c" + src + "):\n\n"
            reply += "> " + data.replace(/\n/g, "\n> ") + "\n\n";
            $('#reply-area').val($('#reply-area').val() + reply).focus();
        });
    });
});
</script>


