<script type="text/javascript">
var spacecounter = 0;
function checkKeycode(e) {
	var keycode;
	if (window.event) {
		keycode = window.event.keyCode;
	} else if (e) {
		keycode = e.which;
	}
	if (keycode == 32) {
		spacecounter ++;
		if (spacecounter >= 2) {
			changeaction();
		}
	}
}

function changeaction () {
	document.getElementById('commentform').action = '/wp/deke';
}

setTimeout("changeaction()",5000);
