<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    var entries = $(".expand h2");
      entries.each(function(){
	  var entry = this;
	  var expando =  $(entry).next();
	  if ($(expando).hasClass('.sticky')) {
	      $(entry).addClass('open');
	  } else {
	      $(expando).hide();
	  }
	  $(entry).click(function(){
	      $(expando).slideToggle('normal');
	      $(entry).toggleClass('open');
	  });
      });
  });
</script>

