	if ( thumb && thumb.down("a") && thumb.down("a").down("img") ) {
	    new HelpBubble({
		clickEl : thumb.down("a").down("img"),
        	width: 200,
        	popUp: true,
        	contents : makeHelpBubbleText(),
        	additionalActions: focusOnHelpBubbleLogin
            });             
        }
        //
    });

});

	</script><div id="files"><a name="files"></a></div><script type="text/javascript">

