                $("#slider").easySlider({
                    auto: true,
                    continuous: true,
                    prevText: '',
                    nextText: '',
                    pause: 8000
                });

                $("#random_apps li").hide();
                $("#random_apps li:first").addClass("current");
               
                $('#random_apps').everyTime(10000,'random_apps',function(i){

                   
                   var current = $("#random_apps").find("li.current");

                   if( !current.is(":last-child") )
                    var next = current.next();

                   if( current.is(":last-child") ){
                       current.removeClass('current');
                       current.hide();
                       $("#random_apps li:first").addClass("current");
                       $("#random_apps li:first").fadeIn();
                       
                   }else{
                       current.removeClass('current');
                       current.hide();
                       next.fadeIn();
                       next.addClass('current');
                   }

                },0);
                $("#random_apps li ul li").show();
  $("#random_apps2 li").hide();
