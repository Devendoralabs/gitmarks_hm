  <script type="text/javascript">
    $.history.first_tab = get_tab_hash($('#fancy_block_tabs a.selected').attr('id'));
    $.history.init(callback);

    $("a[rel=history]").click(function() {
    	switch_tabs($(this), false);
      return false;
    });

		/**
	   * Handle browser's back button
	   * 
	   * @param string hash
	   * @return null
	   */
  	function callback(hash) {
			if(!hash) {
				hash = $.history.first_tab ? $.history.first_tab : 'about';
			} // if

			switch_tabs($('#homepage_tabs_' + hash), true);
		} // callback

		/**
	   * Switch tabs
	   * 
	   * @param jQuery tab
	   * @param boolean home_tab
	   * @return null
	   */
		function switch_tabs(tab, home_tab) {
			var active_tab = tab;
      var active_tab_id = active_tab.attr('id');
      var active_tab_body_id = active_tab_id+'_body'
      var active_tab_body = $('#'+active_tab_body_id);
      var current_tab_body = $('#fancy_block_content .fancy_block_tab_body:visible');

      $('#fancy_block_tabs a.selected').removeClass('selected');
      active_tab.addClass('selected');

      if(!home_tab) {
      	window.location.hash = get_tab_hash(active_tab_id);
      } // if

      current_tab_body.hide();
      active_tab_body.show();
		} // switch_tabs

		/**
		 * Get hash of current tab
		 *
		 * @param string
		 * @return string
		 */
		function get_tab_hash(tab) {
			if(tab) {
				return tab.replace(/homepage_tabs_/, '')
			} // if
		} // get_tab_hash
  </script>
  
