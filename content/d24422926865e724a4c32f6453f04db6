        <script type="text/javascript">
          $('#homepage_tabs_tour_body #tour_menu a').click(function () {
            var active_tour_anchor = $(this);
            var active_tour_anchor_parent = active_tour_anchor.parent();
            var active_tour_top = $('#'+active_tour_anchor_parent.attr('id')+'_top');
            var active_tour_bottom = $('#'+active_tour_anchor_parent.attr('id')+'_bottom');
                                 
            $('#homepage_tabs_tour_body #tour_menu li.selected').removeClass('selected');
            active_tour_anchor_parent.addClass('selected');
                        
            $('#homepage_tabs_tour_body #tour_items_top_blocks .tour_item_top_block:visible').hide();
            active_tour_top.show();
            
            $('#homepage_tabs_tour_body #tour_items_bottom_blocks .tour_item_bottom_block:visible').hide();
            active_tour_bottom.show();
            
            // fade in tour screenshot
            active_tour_top.find('.main_image img').hide();
            active_tour_top.find('.main_image img').fadeIn(1400);
            
            // fade in tour short description
            active_tour_top.find('.tour_item_top_block_content p').hide();
            active_tour_top.find('.tour_item_top_block_content p').fadeIn(1400);

            // fade in tour bottom block
            active_tour_bottom.children().hide();
            active_tour_bottom.children().fadeIn(1400);

            return false;
          });
        </script>
        
